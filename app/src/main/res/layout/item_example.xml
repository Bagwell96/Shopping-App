<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        app:cardElevation="10dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#5e92f3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_category_24"
                android:id="@+id/imageExample"
                android:layout_width="120dp"
                android:layout_height="150dp"></ImageView>

            <LinearLayout
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                                >

                <TextView
                    android:id="@+id/nameExample"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Ürün Adı"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/quantiExample"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Ürün Adeti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/priceExample"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Ürün Fiyatı"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>


        </LinearLayout>

        
        
    </androidx.cardview.widget.CardView>
</LinearLayout>