<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="Ürün Adı"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#5e92f3 "
            ></TextView>

        <Button
            android:layout_width="35dp"
            android:id="@+id/fav_btn"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@id/product_name"
            android:background="@drawable/ic_baseline_favorite_border_24" />
        <Button
            android:layout_width="35dp"
            android:id="@+id/fav2_btn"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_marginRight="10dp"
            android:layout_alignRight="@id/product_name"
            android:background="@drawable/ic_baseline_favorite_24" />

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name"
            android:scaleType="center"
            android:layout_marginTop="2dp"></ImageView>

        <TextView
            android:id="@+id/product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price"
            android:text="Ürün Açıklaması"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:textSize="15dp"
            android:textColor="#5e92f3 "></TextView>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:text="Ürün Fiyatı"

            android:textAlignment="center"
            android:textSize="19dp"
            android:textColor="#5e92f3 "></TextView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>